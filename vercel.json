{
  "cleanUrls": true,
  "rewrites": [
    { "source": "/terms", "destination": "/terms.html" },
    { "source": "/privacy", "destination": "/privacy.html" },
    { "source": "/join", "destination": "/join.html" },
    { "source": "/projects", "destination": "/projects.html" },
    { "source": "/about", "destination": "/about.html" },
    { "source": "/csr", "destination": "/csr.html" },
    { "source": "/donation", "destination": "/donation.html" },
    { "source": "/member-login", "destination": "/member-login.html" },
    { "source": "/admin-login", "destination": "/admin-login.html" },
    { "source": "/member-dashboard", "destination": "/member-dashboard.html" },
    { "source": "/admin-dashboard", "destination": "/admin-dashboard.html" },
    { "source": "/csr-login", "destination": "/csr-login.html" },
    { "source": "/csr-dashboard", "destination": "/csr-dashboard.html" },
    { "source": "/store", "destination": "/store.html" },
    { "source": "/m/:page", "destination": "/m/:page.html" },
    { "source": "/api/store/:path*", "destination": "https://fwf-production.up.railway.app/api/store/:path*" },
    { "source": "/api/auth/:path*", "destination": "https://fwf-production.up.railway.app/api/auth/:path*" },
    { "source": "/api/member/:path*", "destination": "https://fwf-production.up.railway.app/api/member/:path*" },
    { "source": "/api/admin/:path*", "destination": "https://fwf-production.up.railway.app/api/admin/:path*" },
    { "source": "/api/pay/:path*", "destination": "https://fwf-production.up.railway.app/api/pay/:path*" },
    { "source": "/api/referral/:path*", "destination": "https://fwf-production.up.railway.app/api/referral/:path*" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "X-Frame-Options", "value": "DENY" },
        { "key": "X-XSS-Protection", "value": "1; mode=block" },
        { "key": "Referrer-Policy", "value": "strict-origin-when-cross-origin" },
        { "key": "Permissions-Policy", "value": "camera=(), microphone=(), geolocation=()" },
        { "key": "Strict-Transport-Security", "value": "max-age=31536000; includeSubDomains; preload" }
      ]
    },
    {
      "source": "/service-worker.js",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=0, must-revalidate" },
        { "key": "Service-Worker-Allowed", "value": "/" }
      ]
    },
    {
      "source": "/manifest.json",
      "headers": [
        { "key": "Content-Type", "value": "application/manifest+json" }
      ]
    },
    {
      "source": "/assets/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    }
  ],
  "github": {
    "silent": true
  }
}